{
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "rootDir": "src",
  "snapshotSerializers": ["enzyme-to-json"],
  "setupTestFrameworkScriptFile": "<rootDir>setupTests.ts",
  "globals": {
    "ts-jest": {
      "skipBabel": true
    }
  }
}
